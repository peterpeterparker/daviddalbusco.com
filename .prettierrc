{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-organize-imports"],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{
			"files": ["*.md"],
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": ["*.scss", "*.css"],
			"options": {
				"singleQuote": false
			}
		}
	]
}
